<Window x:Class="WpfNoPrinting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Printing" Height="170" Width="277" Closing="Window_Closing" Closed="Window_Closed" Topmost="True" Visibility="Hidden">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*" />
            <RowDefinition Height="136*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Printing is not alowed this way. Please use button." TextWrapping="Wrap"/>
        <Button Content="OK" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="141,46,0,0" Name="button1" VerticalAlignment="Top" Width="102" Click="button1_Click" />
        <Button Content="Proceed anyway" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="12,45,0,0" Name="button2" VerticalAlignment="Top" Width="123" Click="button2_Click" />
    </Grid>
</Window>
